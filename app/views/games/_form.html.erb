<%= form_for @game, url: {action: action} do |f| %>
  <div class="row">
    <div class="col col-md-4 text-center mb-3">
      <img src="https://gamefaqs.akamaized.net/box/6/4/7/6647_front.jpg" height="200">
    </div>

    <div class="col col-md-8">
      <div class="form-group">
        <label>Título</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="row">
        <div class="col-6 col-md-4">
          <div class="form-group">
            <label>Preço normal</label>
            <%= f.number_field(:price, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
        </div>
        <div class="col-6 col-md-4">
          <div class="form-group">
            <label>Preço c/ manual</label>
            <%= f.number_field(:price_with_manual, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="checkbox" class="form-check-input">
          Disponível?
        </label>
      </div>

      <button type="submit" class="btn btn-success btn-block mt-4">
        <% if action == "update" %>
          Atualizar
        <% else %>
          Criar
        <% end %>
      </button>
    </div>
  </div>
<% end %>
